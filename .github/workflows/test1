name: Update Readme File
on:
  schedule:
    - cron: '0 */5 * * *'
  workflow_dispatch:
jobs:
  update-lastfm:
    name: Update Music Stats
    runs-on: ubuntu-latest
    steps:
      # 1. é¦–å…ˆç°½å‡ºä»£ç¢¼
      - uses: actions/checkout@v3
      # 2. æ‹‰å–æœ€æ–°æ›´æ”¹ï¼Œä»¥é˜²è¬ä¸€
      - name: Pull latest changes
        run: git pull
      
      # 3. åœ¨ç°½å‡ºä»£ç¢¼å¾Œï¼Œé‹è¡Œ lastfm-readme
      - name: Update Last.fm README
        uses: dxnter/lastfm-readme@v1.6.0
        with:
          LASTFM_API_KEY: ${{ secrets.LASTFM_API_KEY }}
          LASTFM_USER: GhostMxv
          SHOW_TITLE: false
          LOCALE: en-US
          
      - name: Remove blockquote from README
        run: |
          sed -i 's/> ğŸ¶/-/g' README.md
          sed -i 's/> âˆ™/-/g' README.md
          
      # 4. æäº¤æ™‚æŒ‡å®šç”¨æˆ¶ä¿¡æ¯
      - name: Commit Last.fm changes
        uses: sarisia/actions-commit@master
        with:
          commit_user_name: "README Bot"
          commit_user_email: "bot@example.com"
          commit_message: "docs: update last.fm stats" # å»ºè­°ç‚ºè‡ªå‹•æäº¤æ·»åŠ æ¸…æ™°çš„ message

  update-feed:
    needs: update-lastfm
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Pull latest changes
        run: git pull
        
      - uses: sarisia/actions-readme-feed@v1
        id: feed
        with:
          file: 'README.md'
          max_entry: 6
          format: '- ${monthshort} ${day} ${year} - [${title}](${url})'
          timezone: 'Asia/Hong_Kong'
          url: |
            https://gholts.top/rss.xml
            
      # 5. åœ¨æ­¤è™•ä¹ŸæŒ‡å®šç›¸åŒçš„ç”¨æˆ¶ä¿¡æ¯
      - if: ${{ steps.feed.outputs.changed == true }}
        name: Commit feed changes
        uses: sarisia/actions-commit@master
        with:
          commit_user_name: "README Bot"
          commit_user_email: "bot@example.com"
          commit_message: "docs: update blog feed" # å»ºè­°ç‚ºè‡ªå‹•æäº¤æ·»åŠ æ¸…æ™°çš„ message
